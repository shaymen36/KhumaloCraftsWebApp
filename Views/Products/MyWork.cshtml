@model IEnumerable<Product>

@{
    ViewData["Title"] = "My Work";
}

<h1>My Work</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                
                <td>
                    <img src="@item.ImagePath" alt="@item.Name" style="width:100px; height:100px;" />
                </td>
            </tr>
        }
    </tbody>
</table>

